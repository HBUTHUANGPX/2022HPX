<launch>
    <!-- 将 urdf 文件的内容加载到参数服务器 -->
    <param name="robot_description" command="$(find xacro)/xacro $(find gazebo_car)/urdf/xacro_code/car.urdf.xacro" />

    <!-- 启动 gazebo -->
    <!-- <include file="$(find gazebo_ros)/launch/empty_world.launch" /> -->

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find gazebo_car)/world/test.world" />
    </include>

    <!-- <node pkg="rviz" type="rviz" name="rviz" /> -->
    
    <!-- 在 gazebo 中显示机器人模型 -->
    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher"/>
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
    <node pkg="gazebo_ros" type="spawn_model" name="model" args="-urdf -model car -param robot_description"  />

    
    <!-- <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen" />
    <node pkg="joint_state_publisher_gui" type="joint_state_publisher_gui" name="joint_state_publisher_gui" output="screen" /> -->
</launch>